@import './variable.styl'

.bg-light
  background-color $bg-light

.bg-success
  background-color $bg-success

.bg-warning
  background-color $bg-warning

.bg-danger
  background-color $bg-danger

.text-info
  color $text-info

.text-success
  color $text-success

.text-warning
  color $text-warning

.text-danger
  color $text-danger

